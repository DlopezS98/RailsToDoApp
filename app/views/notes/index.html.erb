<h1>Notes</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Description</th>
      <th>Created At</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.id %></td>
        <td><%= note.title %></td>
        <td><%= note.description %></td>
        <td><%= note.created_at %></td>
        <td style="display: table-cell; vertical-align: middle; text-align: center;">
          <!-- <%= link_to 'Show', note %>
          <br> -->
          <%= link_to 'Edit', edit_note_path(note), class:'btn btn-primary btn-sm mb-1' %>
          <br>
          <%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
